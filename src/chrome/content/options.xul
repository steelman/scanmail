<!DOCTYPE mydialog SYSTEM "chrome://scanmail/locale/scanmail.dtd">
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<prefwindow
     title="Scan'Mail preferences" 
     xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<prefpane>
		<preferences>
			<preference id="google-places-api-key" name="extensions.scanmail.google-places-api-key" type="string"/>
			<preference id="mailto-protocol" name="extensions.scanmail.mailto-protocol" type="bool"/>
		</preferences>
		<groupbox>
			<caption label="&scanmail.google-places-api-key.label;"/>
			<textbox id="checkbox-google-places-api-key" preference="google-places-api-key"/>
			<label value="More informations" class="text-link" href="http://github.com/blueicefield/scanmail"/>
		</groupbox>
		<groupbox>
			<caption label="&scanmail.protocols.label;"/>
			<checkbox id="checkbox-mailto" label="&scanmail.mailto-protocol.label;" preference="mailto-protocol"/>
		</groupbox>
	</prefpane>
</prefwindow>
